package com.apms.home.config;

import java.io.IOException;
import java.io.Reader;

import org.apache.ibatis.io.Resources;
import org.apache.ibatis.session.SqlSession;
import org.apache.ibatis.session.SqlSessionFactory;
import org.apache.ibatis.session.SqlSessionFactoryBuilder;

public class MyBatisConnectionFactory {

	// 데이터베이스 접속 객체
	private static SqlSessionFactory sqlSessionFactory;
	
	// xml에 명시된 접속 정보를 얽어들인다.
	// class 초기화 블럭 : class 변수의 복잡한 초기화에 사용된다.
	// class가 처음 로딩될 때 한번만 수행된다.
	static {
		// 접속 정보를 명시하고 있는 xml의 경로 읽기
		try {
			// mybatis-config,xml 파일의 경로 지점
			Reader reader = Resources.getResourceAsReader("./mybatis-config.xml");
			
			// sqlSessionFactory가 존재하지 않는다면 생성한다.
			if (sqlSessionFactory == null) {
					sqlSessionFactory = new SqlSessionFactoryBuilder().build(reader);
				}
		} catch (IOException e) {
			// TODO: handle exception
			e.printStackTrace();
		}
	}
	
	// databas 접속 객체를 통해 database에 잡속한 세션를 리턴한다.
	public static SqlSession getSqlSession() {
		return sqlSessionFactory.openSession();
	}
}